<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # ğŸ” Bloquer l'accÃ¨s aux fichiers sensibles (.env, .git, .htaccess, .htpasswd, etc.)
    <FilesMatch "(\.env|\.git|\.htaccess|\.htpasswd|composer\.(lock|json)|package\.(json|lock))">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # ğŸ”’ EmpÃªcher l'exÃ©cution des fichiers PHP dans le dossier storage et uploads
    RewriteRule ^(storage|uploads)/.*\.(php|phps)$ - [F,L]

    # ğŸš€ Activer le SSL (HTTPS) - redirection automatique vers HTTPS
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ğŸ“› Protection contre le Clickjacking
    Header always append X-Frame-Options SAMEORIGIN

    # ğŸ›¡ï¸ Protection contre XSS
    Header set X-XSS-Protection "1; mode=block"

    # ğŸ”„ Protection contre le sniffing MIME
    Header set X-Content-Type-Options nosniff

    # ğŸš« Bloquer l'accÃ¨s direct aux fichiers PHP dans public/
    RewriteRule ^public/.*\.(php)$ - [F,L]

    # ğŸ›‘ DÃ©sactiver l'affichage des erreurs PHP
    php_flag display_errors Off
    php_flag log_errors On

    # ğŸ” Interdire l'accÃ¨s au fichier .htaccess
    <Files .htaccess>
        Order allow,deny
        Deny from all
    </Files>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} . 
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} . 
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Rediriger les slashs de fin si ce n'est pas un dossier
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Envoyer toutes les requÃªtes vers le contrÃ´leur frontal (index.php)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
